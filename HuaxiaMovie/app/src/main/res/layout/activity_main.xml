<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="600dp"/>

    <FrameLayout
        android:id="@+id/ff_play"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginLeft="690dp"
        android:layout_marginTop="280dp"
        android:focusable="true">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/play"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="@string/home_play"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_play_focus"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/config_list_5_focus"
            android:scaleType="fitXY"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/ff_set"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginLeft="910dp"
        android:layout_marginTop="280dp"
        android:focusable="true">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/setting"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="@string/home_set"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_set_focus"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/config_list_5_focus"
            android:scaleType="fitXY"
            android:visibility="gone"/>

    </FrameLayout>

